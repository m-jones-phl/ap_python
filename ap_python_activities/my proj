def start_game():
    print("Welcome to the Text Adventure Game!")
    print("You wake up in a mysterious forest. What do you do?")
    print("a. Explore the surroundings")
    print("b. Look for a path")
    print("c. Climb a tree to get a better view")

    choice = input("Enter your choice: ").lower()

    if choice == 'a':
        explore_forest()
    elif choice == 'b':
        find_path()
    elif choice == 'c':
        climb_tree()
    else:
        print("Invalid choice. Please try again.")
        start_game()


